<UserControl x:Class="Helper.UserControls.EventsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="_lb" SelectionMode="Extended" SelectionChanged="OnSelectionChanged" Background="#202020">

        </ListBox>

        <StackPanel Grid.Column="1">
            <Button Content="Add..." IsEnabled="False"/>
            <Button Content="Edit..." IsEnabled="False"/>
            <Button x:Name="_btnRemove" Content="Remove" Click="OnRemoveClick"/>
        </StackPanel>
    </Grid>
</UserControl>
