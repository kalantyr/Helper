<UserControl x:Class="Helper.UserControls.CheckerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="2"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="_tbName" MinWidth="200"/>
            <Button Content="Check now" Click="OnRefreshClick" />
            <Button Content="Copy" Click="OnCopyClick"/>
            <Button Content="History..." Click="OnHistoryClick"/>
        </StackPanel>
    </Grid>
</UserControl>
