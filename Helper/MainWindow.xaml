<Window x:Class="Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:Helper.UserControls"
        Title="Helper" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Создать..." Click="OnNewClick"/>
                <MenuItem Header="Загрузить..." Click="OnLoadClick"/>
                <MenuItem Header="Сохранить..." Click="OnSaveClick"/>
                <Separator/>
                <MenuItem Header="Выход" Click="OnExitClick"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="Checkers">
                <userControls:CheckersControl x:Name="_checkers"/>
            </TabItem>
            <TabItem Header="Jobs">
                <userControls:JobsControl x:Name="_jobs"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
